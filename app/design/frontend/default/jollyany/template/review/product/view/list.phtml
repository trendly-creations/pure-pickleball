<?php $_items = $this->getReviewsCollection()->getItems();?>

    <?php if (count($_items)):?>

        <?php echo $this->getChildHtml('toolbar') ?>
		
		<div class="col-lg-12 col-md-12 col-sm-12">
		
			<ul class="media-list">
			<?php foreach ($_items as $_review):?>
				<li class="media general box">
				
					<div class="col-lg-3 col-md-3 col-sm-3">
						<div class="nickname">
							<strong><?php echo $this->escapeHtml($_review->getNickname()) ?></strong>
							
							<?php $_votes = $_review->getRatingVotes(); ?>
							<?php if (count($_votes)): ?>

								<?php foreach ($_votes as $_vote): ?>
									<div class="rating">
										<label><?php echo $this->escapeHtml($_vote->getRatingCode()) ?></label>
										<div class="rating-start">
											<span style="width:<?php echo $_vote->getPercent() ?>%;"></span>
										</div>
									</div>
								<?php endforeach; ?>

							<?php endif; ?>
						</div>
						
						
					</div>
					<div class="col-lg-9 col-md-9 col-sm-9">
						<div>

							<h5 class="media-heading">
								<?php echo $this->escapeHtml($_review->getTitle()) ?>
								
								<span class="pull-right">
									<em><?php echo $this->formatDate($_review->getCreatedAt(), 'long') ?></em>
								</span>
							</h5>
							

							<p><?php echo nl2br($this->escapeHtml($_review->getDetail())) ?></p>
						</div>
					</div>
				</li>
				
			<?php endforeach; ?>
			</ul>
		</div>
		<hr class="tall"/>
        <?php echo $this->getChildHtml('toolbar') ?>
    <?php endif;?>
    <?php echo $this->getChildHtml('review_form') ?>

