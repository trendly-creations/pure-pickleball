<div class="page-title">
    <h1><?php echo $this->__('My Product Reviews') ?></h1>
</div>

<?php echo $this->getMessagesBlock()->getGroupedHtml() ?>

<?php if( $this->getCollection() && $this->count()): ?>
    <?php echo $this->getToolbarHtml() ?>
	<div class="featured-box featured-box-secundary featured-view-box">
		<div class="box-content">
			<table class="shop_table cart custom-table review-table" id="my-reviews-table">
				<tbody>
					<?php foreach ($this->getCollection() as $_review): ?>
					<tr>
						<td class="order-date"><span class="nobr"><?php echo $this->dateFormat($_review->getReviewCreatedAt()); ?></span></td>
						<td><h5 class="product-name"><a href="<?php echo $this->getProductLink() ?>id/<?php echo $_review->getEntityPkValue() ?>"><?php echo $this->escapeHtml($_review->getName()) ?></a></h5></td>
						<td>
						<?php if($_review->getSum()): ?>
							<div class="star-rating">
								<span style="width:<?php echo ( $_review->getSum() / $_review->getCount() ) ?>%;"></span>
							</div>
						<?php endif; ?>
						</td>
						<td class="order-status"><?php echo $this->helper('review')->getDetailHtml($_review->getDetail()) ?></td>
						<td><a href="<?php echo $this->getReviewLink() ?>id/<?php echo $_review->getReviewId() ?>" class="nobr"><?php echo $this->__('View Details') ?></a></td>
					</tr>
					<?php endforeach; ?>
				</tbody>
			</table>
        </div>
	</div>
    <?php echo $this->getToolbarHtml() ?>
<?php else: ?>
    <p><?php echo $this->__('You have submitted no reviews.') ?></p>
<?php endif; ?>
