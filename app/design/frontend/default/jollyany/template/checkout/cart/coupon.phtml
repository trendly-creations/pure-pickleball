<div class="featured-box featured-box-secundary default discount-box">
	<div class="box-content">
		<h4><?php echo $this->__('Discount Codes') ?></h4>
		<form id="discount-coupon-form" action="<?php echo $this->getUrl('checkout/cart/couponPost') ?>" method="post">
			
			<div class="row">
				<input type="hidden" name="remove" id="remove-coupone" value="0" />
				<div class="form-group">
					<div class="col-md-12">
						<label for="coupon_code"><?php echo $this->__('Enter your coupon code if you have one.') ?></label>
						<input class="form-control" id="coupon_code" name="coupon_code" value="<?php echo $this->escapeHtml($this->getCouponCode()) ?>" />
					</div>
				</div>
			</div>
			
			<div class="row">
				<div class="col-md-12">
					<input type="button" value="<?php echo $this->__('Apply Coupon') ?>" class="btn btn-primary" data-loading-text="<?php echo $this->__('Loading...') ?>" onclick="discountForm.submit(false)">
					
					<?php if(strlen($this->getCouponCode())): ?>
						&nbsp; <button onclick="discountForm.submit(true)" type="button" class="btn btn-primary"><?php echo $this->__('Cancel Coupon') ?></button>
					<?php endif;?>
				</div>
			</div>
		</form>
	</div>
</div>

<script type="text/javascript">
//<![CDATA[
var discountForm = new VarienForm('discount-coupon-form');
discountForm.submit = function (isRemove) {
    if (isRemove) {
        $('coupon_code').removeClassName('required-entry');
        $('remove-coupone').value = "1";
    } else {
        $('coupon_code').addClassName('required-entry');
        $('remove-coupone').value = "0";
    }
    return VarienForm.prototype.submit.bind(discountForm)();
}
//]]>
</script>
