/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php if($this->canShowBlock()): ?>
<div class="widget block-layered-nav">
	<div class="title"><h2><?php echo $this->__('Shop By') ?></h2></div>
	<?php if ($this->getLayer()->getState()->getFilters()): ?>
		<div class="featured-box featured-box-secundary">
			<div class="box-content">
				<?php echo $this->getStateHtml() ?>
				<div class="actions"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear All') ?></a></div>
			</div>
		</div>
	<?php endif; ?>
	<?php if($this->canShowOptions()): ?>
		<div class="featured-box featured-box-secundary featured-view-box">
			<div class="box-content">
				<div id="narrow-by-list">
					<?php $_filters = $this->getFilters() ?>
					<?php $i=0; foreach ($_filters as $_filter): $i++ ?>
						<?php if($_filter->getItemsCount()): ?>
							<h5><?php echo $this->__($_filter->getName()) ?></h5>
							<div><?php echo $_filter->getHtml() ?></div>
						<?php endif; ?>
					<?php endforeach; ?>
				</div>
			</div>
		</div>
	<?php endif; ?>
	<hr/>
</div>

<?php endif; ?>
