/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>

<div class="entry">
	<?php
		$_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(600).'" alt="'.$this->escapeHtml($this->getImageLabel()).'" title="'.$this->escapeHtml($this->getImageLabel()).'" class="img-responsive"/>';
	?>
	<?php echo $_helper->productAttribute($_product, $_img, 'image'); ?>
	
	<div class="magnifier">
		<div class="buttons tooltips">
			<a href="<?php echo $this->helper('catalog/image')->init($_product, 'image')->resize(600) ?>" class="sf" title="" data-gal="prettyPhoto[product-gallery]"><span class="fa fa-search"></span></a>
			
			<?php if ($this->helper('wishlist')->isAllow()) : ?>
				<?php $_wishlistSubmitUrl = $this->helper('wishlist')->getAddUrl($_product); ?>
			
				<a class="st" rel="bookmark" href="#" onclick="productAddToCartForm.submitLight(this, '<?php echo $_wishlistSubmitUrl ?>'); return false;" data-placement="bottom" data-toggle="tooltip" data-original-title="<?php echo $this->__('Wishlist') ?>">
					<span class="fa fa-heart"></span>
				</a>
			<?php endif ?>
			
			<?php if($_compareUrl=$this->helper('catalog/product_compare')->getAddUrl($_product)): ?>
				<a class="sg" rel="bookmark" href="<?php echo $_compareUrl ?>" data-placement="bottom" data-toggle="tooltip" data-original-title="<?php echo $this->__('Compare') ?>">
					<span class="fa fa-retweet"></span>
				</a>
			<?php endif ?>
		</div>
	</div>
</div>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="thumbnails clearfix">
	<div id="services" class="owl-carousel">
		<?php $i=0; foreach ($this->getGalleryImages() as $_image): $i++; ?>
			<div class="item">
				<div class="entry<?php if($i==1): ?> first<?php endif ?><?php if($i%3==0): ?> last<?php endif ?>">
					<img alt="" class="img-responsive" src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(200); ?>">
					
					<div class="magnifier">
						<div class="buttons">
							<a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(600); ?>" class="sf" title="" data-gal="prettyPhoto[product-gallery]"><span class="fa fa-search"></span></a>
						</div>
					</div>
				</div>
			</div>
		<?php endforeach; ?>
	</div>
</div> 
<?php endif; ?>
