<?php
/**
 * Pager template
 *
 * @see Mage_Page_Block_Html_Pager
 */
?>
<?php if($this->getCollection()->getSize()): ?>

    <?php if($this->getUseContainer()): ?>
    <div class="pager">
    <?php endif ?>

    <?php if($this->getShowAmounts()): ?>
    <p class="amount">
        <?php if($this->getLastPageNum()>1): ?>
            <?php echo $this->__('Items %s to %s of %s total', $this->getFirstNum(), $this->getLastNum(), $this->getTotalNum()) ?>
        <?php else: ?>
            <strong><?php echo $this->__('%s Item(s)', $this->getTotalNum()) ?></strong>
        <?php endif; ?>
    </p>
    <?php endif ?>

    <?php if($this->getShowPerPage()): ?>
    <div class="limiter">
        <select onchange="setLocation(this.value)">
        <?php foreach ($this->getAvailableLimit() as  $_key=>$_limit): ?>
            <option value="<?php echo $this->getLimitUrl($_key) ?>"<?php if($this->isLimitCurrent($_key)): ?> selected="selected"<?php endif ?>>
                <?php echo $this->__('Show') ?>: <?php echo $_limit ?>
            </option>
        <?php endforeach; ?>
        </select>
    </div>
    <?php endif ?>

	
	
    <?php if($this->getLastPageNum()>1): ?>
		<div class="pagination_wrapper">
		
			<?php $helper = $this->helper('jollyanytheme'); ?>
			<?php if($helper->isCategoryPage() || $helper->isSearchPage()): ?>
				<?php if(!Mage::getStoreConfig('jollyanytheme/catalog/more_view')): ?>
				<ul class="pagination">
					<?php if (!$this->isFirstPage()): ?>
						<li>
							<a class="previous<?php if(!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif;?>" href="<?php echo $this->getPreviousPageUrl() ?>" title="<?php echo $this->__('Previous') ?>">
								<?php if(!$this->getAnchorTextForPrevious()): ?>
									<i class="fa fa-chevron-left"></i>
								<?php else: ?>
									<?php echo $this->getAnchorTextForPrevious() ?>
								<?php endif;?>
							</a>
						</li>
					<?php endif;?>

					<?php if ($this->canShowFirst()): ?>
						<li><a class="first" href="<?php echo $this->getFirstPageUrl() ?>">«</a></li>
					<?php endif;?>

					<?php if ($this->canShowPreviousJump()): ?>
						<li><a class="previous_jump" title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a></li>
					<?php endif;?>

					<?php foreach ($this->getFramePages() as $_page): ?>
						<?php if ($this->isPageCurrent($_page)): ?>
							<li class="active"><a><?php echo $_page ?></a></li>
						<?php else: ?>
							<li><a href="<?php echo $this->getPageUrl($_page) ?>"><?php echo $_page ?></a></li>
						<?php endif;?>
					<?php endforeach;?>


					<?php if ($this->canShowNextJump()): ?>
						<li><a class="next_jump" title="" href="<?php echo $this->getNextJumpUrl() ?>">...</a></li>
					<?php endif;?>

					<?php if ($this->canShowLast()): ?>
					  <li><a class="last" href="<?php echo $this->getLastPageUrl() ?>">»</a></li>
					<?php endif;?>

					<?php if (!$this->isLastPage()): ?>
						<li>
							<a class="next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>" href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>">
								<?php if(!$this->getAnchorTextForNext()): ?>
									<i class="fa fa-chevron-right"></i>
								<?php else: ?>
									<?php echo $this->getAnchorTextForNext() ?>
								<?php endif;?>
							</a>
						</li>
					<?php endif;?>
					</ul>
				
				<?php else: ?>
					<?php $toolbar = new Mage_Catalog_Block_Product_List_Toolbar ?>
					<?php $nextUrl = $this->getNextPageUrl() ?>
					<?php 
						if(!$this->getRequest()->getParam('mode')){
							$nextUrl.='&mode='.$toolbar->getCurrentMode();
						}
					?>
					<div class="buttons padding-top text-center" id="showmore-container">
						<a class="btn btn-primary btn-lg" href="<?php echo $nextUrl ?>" onclick="shopMore(this.href, <?php echo $this->getCollection()->getLastPageNumber() ?>); return false" id="shopmore">Show More</a>
					</div>
				<?php endif ?>
			<?php else: ?>
				<ul class="pagination">
					<?php if (!$this->isFirstPage()): ?>
						<li>
							<a class="previous<?php if(!$this->getAnchorTextForPrevious()): ?> i-previous<?php endif;?>" href="<?php echo $this->getPreviousPageUrl() ?>" title="<?php echo $this->__('Previous') ?>">
								<?php if(!$this->getAnchorTextForPrevious()): ?>
									<i class="fa fa-chevron-left"></i>
								<?php else: ?>
									<?php echo $this->getAnchorTextForPrevious() ?>
								<?php endif;?>
							</a>
						</li>
					<?php endif;?>

					<?php if ($this->canShowFirst()): ?>
						<li><a class="first" href="<?php echo $this->getFirstPageUrl() ?>">«</a></li>
					<?php endif;?>

					<?php if ($this->canShowPreviousJump()): ?>
						<li><a class="previous_jump" title="" href="<?php echo $this->getPreviousJumpUrl() ?>">...</a></li>
					<?php endif;?>

					<?php foreach ($this->getFramePages() as $_page): ?>
						<?php if ($this->isPageCurrent($_page)): ?>
							<li class="active"><a><?php echo $_page ?></a></li>
						<?php else: ?>
							<li><a href="<?php echo $this->getPageUrl($_page) ?>"><?php echo $_page ?></a></li>
						<?php endif;?>
					<?php endforeach;?>


					<?php if ($this->canShowNextJump()): ?>
						<li><a class="next_jump" title="" href="<?php echo $this->getNextJumpUrl() ?>">...</a></li>
					<?php endif;?>

					<?php if ($this->canShowLast()): ?>
					  <li><a class="last" href="<?php echo $this->getLastPageUrl() ?>">»</a></li>
					<?php endif;?>

					<?php if (!$this->isLastPage()): ?>
						<li>
							<a class="next<?php if(!$this->getAnchorTextForNext()): ?> i-next<?php endif; ?>" href="<?php echo $this->getNextPageUrl() ?>" title="<?php echo $this->__('Next') ?>">
								<?php if(!$this->getAnchorTextForNext()): ?>
									<i class="fa fa-chevron-right"></i>
								<?php else: ?>
									<?php echo $this->getAnchorTextForNext() ?>
								<?php endif;?>
							</a>
						</li>
					<?php endif;?>
					</ul>
			<?php endif ?>
		
			
		</div>
    <?php endif; ?>

    <?php if($this->getUseContainer()): ?>
    </div>
    <?php endif ?>

<?php endif ?>
