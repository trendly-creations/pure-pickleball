<?xml version="1.0"?>
<config>
    <modules>
        <MGS_Megamenu>
            <version>0.1.0</version>
        </MGS_Megamenu>
    </modules>
    <frontend>
        <layout>
            <updates>
                <megamenu>
                    <file>megamenu.xml</file>
                </megamenu>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
			<megamenu>
				<use>admin</use>
				<args>
					<module>MGS_Megamenu</module>
					<frontName>megamenu</frontName>
				</args>
			</megamenu>
        </routers>
    </admin>
    <adminhtml>
		<menu>
			<mgscore module="mgscore"> 
				<children>
					<megamenu module="megamenu">
						<title>Megamenu</title>
						<sort_order>71</sort_order>               
						<children>
							<items module="megamenu">
								<title>Manage Megamenu Items</title>
								<sort_order>0</sort_order>
								<action>megamenu/adminhtml_megamenu</action>
							</items>
							<config module="megamenu">
								<title>Configuration</title>
								<sort_order>1</sort_order>
								<action>adminhtml/system_config/edit/section/megamenu</action>
							</config>
						</children>
					</megamenu>
				</children>
			</mgscore>
		</menu>

		
		<acl>
			<resources>
				<admin>
					<children>
						<mgscore module="mgscore"> 
							<children>
								<megamenu module="megamenu">
									<title>Megamenu</title>
									<sort_order>71</sort_order>               
									<children>
										<items module="megamenu">
											<title>Manage Megamenu Items</title>
											<sort_order>0</sort_order>
										</items>
										<config module="megamenu">
											<title>Configuration</title>
											<sort_order>1</sort_order>
										</config>
									</children>
								</megamenu>
							</children>
						</mgscore>
						<system>
							<children>
								<config>
									<children>
										<megamenu translate="title">
											<title>Megamenu</title>
											<sort_order>888</sort_order>
										</megamenu>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
		<layout>
			<updates>
				<megamenu>
					<file>mgs_megamenu.xml</file>
				</megamenu>
			</updates>
		</layout>
    </adminhtml>   
    <global>
        <models>
            <megamenu>
                <class>MGS_Megamenu_Model</class>
                <resourceModel>megamenu_mysql4</resourceModel>
            </megamenu>
            <megamenu_mysql4>
                <class>MGS_Megamenu_Model_Mysql4</class>
                <entities>
                    <megamenu>
                        <table>mgs_megamenu</table>
                    </megamenu>
                </entities>
            </megamenu_mysql4>
        </models>
        <resources>
            <megamenu_setup>
                <setup>
                    <module>MGS_Megamenu</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </megamenu_setup>
            <megamenu_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </megamenu_write>
            <megamenu_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </megamenu_read>
        </resources>
        <blocks>
            <megamenu>
                <class>MGS_Megamenu_Block</class>
            </megamenu>
        </blocks>
        <helpers>
            <megamenu>
                <class>MGS_Megamenu_Helper</class>
            </megamenu>
        </helpers>
    </global>
	<default>
		<megamenu>
			<general>
				<enabled>1</enabled>
				<width>950</width>
				<height>28</height>
				<max_level>2</max_level>
				<max_subcat>6</max_subcat>
				<home>1</home>
				<hometext>Home</hometext>
				<max_column>5</max_column>
				<theme>default</theme>
			</general>
		</megamenu>
	</default>
</config>